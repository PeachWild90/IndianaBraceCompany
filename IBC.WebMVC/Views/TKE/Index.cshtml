@model IEnumerable<IBC.Models.TKEModels.TKEListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Terminal Knee Extender</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.TKEId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            <p>Price</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.TKEId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Reason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td><p>$399</p></td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TKEId }) |
            @Html.ActionLink("Details", "Details", new { id = item.TKEId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TKEId }) |
            @Html.ActionLink("Checkout", "Index", "Master")

        </td>
    </tr>
    }
    <tr>
        <th></th>
        <th></th>
        <th>
            $@(Model.Count() * 399)
        </th>
        <th></th>
    </tr>

</table>
